    "chai": "^4.2.0",
    "faker": "^5.3.1",
    "mocha": "^8.2.1",
    "semantic-release": "^19.0.3",
    "tslint": "^6.1.3",
    "typescript": "^4.1.3"
  },
  "peerDependencies": {
    "@serverless-seoul/dynamorm": "^2.0.0",
    "aws-sdk": "^2.300.0",
