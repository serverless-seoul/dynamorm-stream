  "dependencies": {
    "@types/aws-lambda": "^8.10.71",
    "debug": "^4.3.1"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "commitlint": {
    "extends": [
      "@catchfashion/commitlint-preset"
    ]
  }
