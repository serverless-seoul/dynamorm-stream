  "engines": {
    "node": "^12.10.0"
  },
  "license": "ISC",
  "devDependencies": {
    "@catchfashion/commitlint-preset": "^1.0.3",
    "@catchfashion/semantic-release-config": "^1.0.2",
    "@catchfashion/tslint-preset": "^1.0.2",
    "@serverless-seoul/dynamorm": "^2.11.0",
    "@types/chai": "^4.2.14",
    "@types/debug": "^4.1.5",
    "@types/faker": "^5.1.6",
    "@types/mocha": "^8.2.0",
    "@types/node": "^12.19.15",
